{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "includeForks": true,
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
